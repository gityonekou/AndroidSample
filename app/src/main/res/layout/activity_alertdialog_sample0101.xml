<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd"
    tools:context=".select.AlertDialogSampe0101">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alertdialog_sample0101_textview"
        android:text="@string/alertdialog_sample0101_init_text"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alertdialog_sample0101_button"
        android:text="@string/start_button"
        android:textSize="20sp"
        android:layout_margin="20dp" />

</LinearLayout>