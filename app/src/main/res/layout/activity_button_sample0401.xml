<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdc"
    android:gravity="center"
    tools:context=".button.ButtonSampe0401">

    <TextView
        android:id="@+id/button_sample0401_text_view"
        android:text="@string/button_sample0401_button"
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/button_sample0401_image_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/button_sample0401_image_description"
        android:background="@drawable/button_sample0401_image"/>

    <ImageButton
        android:id="@+id/button_sample0401_image_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/button_sample0401_image_description"
        android:src="@drawable/button_sample0401_image"/>

</LinearLayout>