<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe"
    android:paddingStart="30dp"
    android:paddingEnd="10dp"
    android:gravity="center_vertical"
    tools:context=".select.CheckBoxSampe0101">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_sample0101_checkbox1"
        android:text="@string/checkbox_sample0101_checkbox1_text"
        android:checked="false"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="15sp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_sample0101_checkbox2"
        android:text="@string/checkbox_sample0101_checkbox2_text"
        android:checked="false"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="15sp" />

</LinearLayout>