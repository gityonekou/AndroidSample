<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#dfe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".text.EditTextSampe0401">

    <TextView
        android:id="@+id/edittext_sample0401_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:gravity="start" />

    <!--
        android:importantForAutofill=”no”
        autofillHintsの設定が無い場合のワーニングを消すために設定しています。
    -->
    <EditText
        android:id="@+id/edittext_sample0401_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:textSize="30sp"
        android:inputType="text"
        android:hint="@string/edittext_sample0401_hint"
        android:importantForAutofill="no" />

</LinearLayout>