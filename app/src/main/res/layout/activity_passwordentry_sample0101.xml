<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#cfd"
    tools:context=".select.PasswordEntrySampe0101">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="130dp" />

    <!-- top title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_title"
        android:layout_marginTop="80dp"
        android:text="@string/passwordentry_sample0101_title"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="end"
        android:id="@+id/id_label"
        android:text="@string/passwordentry_sample0101_id_text"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/top_title"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.05" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordentry_sample0101_id"
        android:textSize="20sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/top_title"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_label"
        android:text="@string/passwordentry_sample0101_password_text"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/id_label"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordentry_sample0101_password"
        android:textSize="20sp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/passwordentry_sample0101_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordentry_sample0101_button"
        android:text="@string/start_button"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>