<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bar.SeekBarSampe0201">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_sample0201_textview"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/seekbar_sample0201_seekbar1"
        android:layout_margin="20dp"
        android:background="#faa"/>


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/seekbar_sample0201_seekbar2"
        android:thumb="@mipmap/ic_launcher"
        android:layout_margin="20dp"
        android:background="#ccc" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/seekbar_sample0201_seekbar3"
        android:progressDrawable="@drawable/seekbarsampe_custom_progress"
        android:thumb="@drawable/seekbarsampe_custom_thumb"
        android:background="#ccc"
        android:layout_margin="20dp" />

</LinearLayout>