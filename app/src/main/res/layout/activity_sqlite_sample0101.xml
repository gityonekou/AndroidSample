<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe"
    tools:context=".datastorage.SQLiteSample0101">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_sample0101_edittext_company"
        android:layout_margin="50dp"
        android:background="#fff"
        android:hint="@string/sqlite_sample0101_hint_company"
        android:autofillHints="@string/sqlite_sample0101_hint_company"
        android:inputType="text"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sqlite_sample0101_edittext_stockprice"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_sample0101_edittext_stockprice"
        android:layout_margin="50dp"
        android:background="#fff"
        android:hint="@string/sqlite_sample0101_hint_stockprice"
        android:autofillHints="@string/sqlite_sample0101_hint_stockprice"
        android:inputType="numberDecimal"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sqlite_sample0101_edittext_company"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_sample0101_register_btn"
        android:text="@string/register_button"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_sample0101_edittext_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sqlite_sample0101_read_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_sample0101_read_btn"
        android:text="@string/read"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_sample0101_edittext_stockprice"
        app:layout_constraintStart_toEndOf="@+id/sqlite_sample0101_register_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_sample0101_textview"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_sample0101_register_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>